{
    "openapi": "3.0.0",
    "info": {
        "title": "Flamengo - API",
        "description": "API que retorna informações sobre o Clube de Regatas do Flamengo.",
        "version": "1.0.0"
    },
    "basePath": "/",
    "paths": {
        "/api/lastGames": {
            "get": {
                "summary": "Listar últimos jogos",
                "description": "Função responsável por retornar os últimos 10 jogos do Flamengo.",
                "tags": ["Jogos"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "competition": {
                                            "type": "string"
                                        },
                                        "home": {
                                            "type": "string"
                                        },
                                        "score_home": {
                                            "type": "number"
                                        },
                                        "score_away": {
                                            "type": "number"
                                        },
                                        "away": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            } 
        },
        "/api/nextGames": {
            "get": {
                "summary": "Listar próximos jogos",
                "description": "Função responsável por retornar os 10 próximos jogos do Flamengo.",
                "tags": ["Jogos"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "competition": {
                                            "type": "string"
                                        },
                                        "home": {
                                            "type": "string"
                                        },
                                        "away": {
                                            "type": "string"
                                        },
                                        "date": {
                                            "type": "string"
                                        },
                                        "time": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            } 
        },
        "/api/players": {
            "get": {
                "summary": "Listar elenco",
                "description": "Função responsável por retornar o elenco do Flamengo.",
                "tags": ["Jogadores"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "goalkeepers": {
                                            "type": "string"
                                        },
                                        "defenders": {
                                            "type": "string"
                                        },
                                        "left_backs": {
                                            "type": "string"
                                        },
                                        "right_backs": {
                                            "type": "string"
                                        },
                                        "defensive_midfielders": {
                                            "type": "string"
                                        },
                                        "midfielders": {
                                            "type": "string"
                                        },
                                        "strikers": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            } 
        },
        "/api/trophies": {
            "get": {
                "summary": "Listar títulos do Flamengo",
                "description": "Função responsável por retornar todos os títulos do Flamengo.",
                "tags": ["Time"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "competition": {
                                            "type": "string"
                                        },
                                        "number": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            } 
        }
    }
}